<Window x:Class="BSK2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="370" Width="545">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto" />
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <Label Margin="5" HorizontalAlignment="Center">Tekst do Zaszyfrowania</Label>
            <TextBox Margin="5" Name="input" ></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Margin="5">S1:</Label>
            <TextBox Margin="5" Width="50" Name="s1"/>
            <Label Margin="5">S2:</Label>
            <TextBox Margin="5" Width="50" Name="s2"></TextBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <Button Margin="5" Content="Szyfruj za pomocą S1"/>
            <Button Margin="5" Content="Szyfruj za pomocą S2"/>
            <Button Margin="5" Content="Deszyfruj za pomocą S1"/>
            <Button Margin="5" Content="Deszyfruj za pomocą S2"/>
        </StackPanel>
        <StackPanel  Grid.Row="3" >
            <Label HorizontalAlignment="Center">Wynik:</Label>
            <TextBox Name="output" Margin="5" Height="50"/>
        </StackPanel>

    </Grid>
</Window>
